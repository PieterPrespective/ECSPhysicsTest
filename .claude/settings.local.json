{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__puppeteer__puppeteer_navigate",
      "WebFetch(domain:docs.unity3d.com)",
      "mcp__chroma__chroma_create_collection",
      "mcp__chroma__chroma_add_documents",
      "WebFetch(domain:discussions.unity.com)",
      "Bash(mkdir:*)",
      "mcp__chroma__chroma_get_documents",
      "mcp__chroma__chroma_query_documents",
      "WebFetch(domain:dev.to)",
      "mcp__umcp-docker__GetUnityClientState",
      "mcp__umcp-docker__ForceUpdateEditor",
      "mcp__umcp-docker__ReadConsole",
      "mcp__umcp-docker__ManageScene",
      "mcp__umcp-docker__ExecuteMenuItem",
      "Bash(rm:*)",
      "Bash(find:*)",
      "mcp__chroma__chroma_list_collections",
      "mcp__umcp-docker__MarkStartOfNewStep",
      "mcp__umcp-docker__RequestStepLogs",
      "mcp__umcp-docker__RunTests",
      "WebFetch(domain:github.com)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "chroma",
    "umcp-docker",
    "puppeteer"
  ]
}